Algoritmo "teste condicional"

Var
      y, x, resultado: inteiro


Inicio

      x <- 10
      y <- 5

      escreva ("Quanto é: ", x," + ", y," ? ")
      leia (resultado)
      
      se resultado = x+y entao
            escreval ("Respota certa!")
      fimse
      
      se resultado <> x+y entao
         escreval ("Respota errada!")
      fimse
      
      
      



Fimalgoritmo